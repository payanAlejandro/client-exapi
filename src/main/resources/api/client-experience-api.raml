#%RAML 1.0
title: Client Experience API
description: API para realizar operaciones CRUD hacia API de sincronizaci√≥n.
version: v1
baseUri: https://{host}:{port}/apiClient

mediaType: application/json

uses:
  types: ./types/client-types.raml

/accounts:
  get:
    description: Obtiene todas las cuentas
    responses:
      200:
        body:
          application/json:
            example: !include examples/account-examples/account-list-example.json

  /{accountId}:
    uriParameters:
      accountId:
        description: ID de la cuenta
        type: string
    get:
      description: Obtiene detalles de una cuenta por ID
      responses:
        200:
          body:
            application/json:
              example: !include examples/account-examples/account-example.json
    put:
      description: Modifica una cuenta existente
      body:
        application/json:
          type: types.Account
          example: !include examples/account-examples/account-example.json
      responses:
        200:
          body:
            application/json:
              example: !include examples/responses-examples/success-200.json
    delete:
      description: Elimina una cuenta existente
      responses:
        204:
          description: La cuenta fue eliminada exitosamente
        404:
          description: La cuenta no fue encontrada

  post:
    description: Crea una nueva cuenta
    body:
      application/json:
        example: !include examples/account-examples/account-example.json
    responses:
      201:
        body:
          application/json:
            example: !include examples/responses-examples/success-200.json

/contacts:
  get:
    description: Obtiene todos los contactos
    responses:
      200:
        body:
          application/json:
            example: !include examples/contact-examples/contact-list-example.json

  /{contactId}:
